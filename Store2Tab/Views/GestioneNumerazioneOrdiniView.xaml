<UserControl x:Class="Store2Tab.Views.GestioneNumerazioneOrdiniView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Store2Tab.Views"
             KeyDown="UserControl_KeyDown"
             Loaded="UserControl_Loaded"
             Focusable="True">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- BooleanToVisibilityConverter -->
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <!-- Style per indicare dirty state -->
            <Style x:Key="DirtyIndicatorStyle" TargetType="Border">
                <Setter Property="Background" Value="Transparent"/>
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsDirty}" Value="True">
                        <Setter Property="Background" Value="#44FFA500"/>
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Filtri ricerca -->
            <RowDefinition Height="*"/>
            <!-- Contenuto principale -->
        </Grid.RowDefinitions>

        <!-- Toolbar con pulsanti -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="Auto">
            <Button Name="NuovoButton" Content="F1-Nuovo" Width="80" Margin="5,3" 
                    Click="Nuovo_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="SalvaButton" Content="F2-Salva" Width="80" Margin="5,3" 
                    Click="Salva_Click" Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding CanSaveOrCancel}"/>
            <Button Name="CancellaButton" Content="F4-Cancella" Width="90" Margin="5,3" 
                    Click="Cancella_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="AnnullaButton" Content="F8-Annulla" Width="90" Margin="5,3" 
                    Click="Annulla_Click" Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding CanSaveOrCancel}"/>
        </StackPanel>

        <!-- Sezione filtri ricerca -->
        <Grid Grid.Row="1" Background="#FF3F3F46" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="codice" Foreground="White" 
                       VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Grid.Column="1" Name="CodiceRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"
                     KeyDown="CodiceRicercaTextBox_KeyDown"/>

            <TextBlock Grid.Column="2" Text="descrizione" Foreground="White" 
                       VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBox Grid.Column="3" Name="DescrizioneRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"
                     KeyDown="DescrizioneRicercaTextBox_KeyDown"/>

            <Button Grid.Column="5" Name="CercaButton" Content="F3-Cerca" Width="80" 
                    Margin="10,6" Click="Cerca_Click" Style="{StaticResource ModernButton}"/>
        </Grid>

        <!-- Contenuto principale -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="320"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid numerazione (sinistra) -->
            <Border Grid.Column="0" BorderBrush="#FF434346" BorderThickness="1">
                <DataGrid Name="NumerazioneDataGrid" 
                          AutoGenerateColumns="False" 
                          CanUserAddRows="False"
                          Background="#FF3F3F46" 
                          Foreground="White" 
                          GridLinesVisibility="Horizontal" 
                          HeadersVisibility="Column"
                          SelectionChanged="DataGrid_SelectionChanged"
                          RowBackground="#FF3F3F46" 
                          AlternatingRowBackground="#FF2D2D30"
                          IsReadOnly="False">

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF434346"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Height" Value="25"/>
                            <Setter Property="Padding" Value="5,0"/>
                            <Setter Property="BorderBrush" Value="#FF666666"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.Columns>
                        <!-- Checkbox per selezione multipla -->
                        <DataGridCheckBoxColumn Header="✓" Binding="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}" Width="30"/>
                        <DataGridTextColumn Header="Numerazione (descrizione)" Binding="{Binding Descrizione}" Width="160" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Sigla" Binding="{Binding Sigla}" Width="90" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Pannello dettagli (destra) con dirty indicator -->
            <Border Grid.Column="1" Style="{StaticResource DirtyIndicatorStyle}">
                <StackPanel Margin="15,0,0,0">

                    <!-- Codice -->
                    <GroupBox Header="Codice" Style="{StaticResource ModernGroupBox}" 
                              Height="70" Margin="0,0,0,15">
                        <TextBox Name="CodiceTextBox" Height="25" Width="100" 
                                 HorizontalAlignment="Left" VerticalAlignment="Top"
                                 Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True" Background="#FF4A4A4A"/>
                    </GroupBox>

                    <!-- Numerazione (descrizione) -->
                    <GroupBox Header="Numerazione (descrizione)" Style="{StaticResource ModernGroupBox}" 
                              Height="70" Margin="0,0,0,15">
                        <TextBox Name="NumerazioneDescrizioneTextBox" Height="25" 
                                 VerticalAlignment="Top" Style="{StaticResource ModernTextBox}"
                                 MaxLength="25"/>
                    </GroupBox>

                    <!-- Sigla -->
                    <GroupBox Header="Sigla" Style="{StaticResource ModernGroupBox}" 
                              Height="70" Margin="0,0,0,15">
                        <TextBox Name="SiglaTextBox" Height="25" Width="100"
                                 HorizontalAlignment="Left" VerticalAlignment="Top"
                                 Style="{StaticResource ModernTextBox}"
                                 MaxLength="5"/>
                    </GroupBox>

                    <!-- Stampa Telefono Cliente -->
                    <GroupBox Header="Stampa Telefono Cliente"
                              Style="{StaticResource ModernGroupBox}"
                              Height="70"
                              Margin="0,0,0,15">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBox Name="StampaTelefonoClienteTextBox"
                                     Height="25"
                                     Width="30"
                                     Margin="0,0,10,0"
                                     Style="{StaticResource ModernTextBox}"
                                     PreviewTextInput="StampaTelefonoClienteTextBox_PreviewTextInput"
                                     MaxLength="1"/>
                            <TextBlock Text="0 - non stampare; 1 - nell'intestazione; 2 - nelle note"
                                       VerticalAlignment="Center"
                                       Foreground="#FFB0B0B0"
                                       FontSize="11"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Checkbox Default -->
                    <Grid Margin="0,0,0,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Checkbox Numerazione Ordini Clienti -->
                        <CheckBox Grid.Row="0" Name="NumerazioneOrdiniClientiCheckBox" 
                                  Content="Numerazione di default per Ordini Clienti" 
                                  Foreground="White"
                                  Margin="0,0,0,10" 
                                  VerticalAlignment="Center"/>

                        <!-- Checkbox Numerazione Ordini Fornitori -->
                        <CheckBox Grid.Row="1" Name="NumerazioneOrdiniFornitoriCheckBox" 
                                  Content="Numerazione di default per Ordini Fornitori" 
                                  Foreground="White"
                                  Margin="0,0,0,10" 
                                  VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Indicatore stato dirty -->
                    <Border Background="#FFCC5500" 
                            CornerRadius="3" 
                            Padding="8,4"
                            HorizontalAlignment="Left"
                            Margin="0,10,0,0"
                            Visibility="{Binding IsDirty, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="⚠ Modifiche non salvate" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   FontSize="11"/>
                    </Border>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>