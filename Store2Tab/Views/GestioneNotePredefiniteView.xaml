<UserControl x:Class="Store2Tab.Views.GestioneNotePredefiniteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Store2Tab.Converters">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <conv:IsGreaterThanZeroConverter x:Key="IsGreaterThanZeroConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="Auto">
            <Button Content="F1-Nuovo" Width="80" Margin="5,3" 
                    Click="Nuovo_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="F2-Salva" Width="80" Margin="5,3" 
                    Click="Salva_Click" 
                    IsEnabled="{Binding IsInEditMode}"
                    Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="F3-Cerca" Width="80" Margin="5,3" 
                    Click="Cerca_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="F4-Cancella" Width="90" Margin="5,3" 
                    Click="Cancella_Click" Style="{StaticResource ActionButtonStyle}"/>

            <!-- Nuovo pulsante per cancellazione multipla -->
            <Button Name="CancellaMultiplaButton" Content="F5-Canc.Mult." Width="100" Margin="5,3" 
                    Click="CancellaMultipla_Click" Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding ElementiSelezionati.Count, Converter={StaticResource IsGreaterThanZeroConverter}}"/>

            <Button Content="F8-Annulla" Width="90" Margin="5,3" 
                    Click="Annulla_Click"
                    IsEnabled="{Binding IsInEditMode}"
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>

        <!-- Filtri ricerca -->
        <Grid Grid.Row="1" Background="#FF3F3F46" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="codice" Foreground="White" 
                       VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Grid.Column="1" Height="23" Margin="0,6" 
                     Text="{Binding FiltroCodice, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBox}"/>

            <TextBlock Grid.Column="2" Text="descrizione" Foreground="White" 
                       VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBox Grid.Column="3" Height="23" Margin="0,6" 
                     Text="{Binding FiltroNota, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBox}"/>
        </Grid>

        <!-- Contenuto principale -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid Grid.Column="0" 
                      Name="NoteDocumentoDataGrid"
                      ItemsSource="{Binding NoteDocumento}"
                      SelectedItem="{Binding NotaSelezionata, Mode=TwoWay}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsEnabled="{Binding IsInEditMode, Converter={StaticResource InverseBooleanConverter}}"
                      Background="#FF3F3F46" 
                      Foreground="White" 
                      GridLinesVisibility="Horizontal" 
                      HeadersVisibility="Column"
                      BorderBrush="#FF434346" 
                      BorderThickness="1"
                      RowBackground="#FF3F3F46" 
                      AlternatingRowBackground="#FF2D2D30"
                      SelectionMode="Extended">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF434346"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Padding" Value="5,0"/>
                        <Setter Property="BorderBrush" Value="#FF666666"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="NotaDocumento" 
                                        Binding="{Binding Nota}" 
                                        Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Pannello dettagli -->
            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Codice -->
                <GroupBox Grid.Row="0" Header="Codice" 
                          Style="{StaticResource ModernGroupBox}" 
                          Height="70" Margin="0,0,0,15">
                    <TextBox Height="25" Width="100" 
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Top"
                             Text="{Binding CodiceProposto}"
                             IsReadOnly="True"
                             Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

                <!-- Descrizione nota -->
                <GroupBox Grid.Row="1" Header="Descrizione nota" 
                          Style="{StaticResource ModernGroupBox}">
                    <TextBox Text="{Binding NotaSelezionata.Nota, UpdateSourceTrigger=PropertyChanged}"
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             HorizontalScrollBarVisibility="Auto"
                             Style="{StaticResource ModernTextBox}"
                             Margin="5"
                             TextChanged="DescrizioneNota_TextChanged"
                             Width="Auto"
                             Height="Auto"/>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Caricamento..." 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>