<Window x:Class="Store2Tab.Views.CausaleMovimentoSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Selezione Causale Movimento" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"  ResizeMode="CanResize">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filtri ricerca -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Pulsanti -->
        </Grid.RowDefinitions>

        <!-- Sezione filtri ricerca -->
        <Grid Grid.Row="0" Background="#FF3F3F46" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Codice" Foreground="White" 
                       VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Grid.Column="1" Name="CodiceRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"
                     Text="{Binding FiltroCodice, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="TextBox_KeyDown"/>

            <TextBlock Grid.Column="2" Text="Descrizione" Foreground="White" 
                       VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBox Grid.Column="3" Name="DescrizioneRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"
                     Text="{Binding FiltroDescrizione, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="TextBox_KeyDown"/>

            <Button Grid.Column="5" Name="CercaButton" Content="Cerca" Width="80" 
                    Margin="10,6" Click="Cerca_Click" Style="{StaticResource ActionButtonStyle}"/>
        </Grid>

        <!-- DataGrid causali movimento -->
        <DataGrid Grid.Row="1" Name="CausaliDataGrid" Margin="10"
                  ItemsSource="{Binding CausaliMovimento}"
                  SelectedItem="{Binding CausaleSelezionata}"
                  AutoGenerateColumns="False" CanUserAddRows="False"
                  Background="#FF3F3F46" Foreground="White" 
                  GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                  BorderBrush="#FF434346" BorderThickness="1"
                  RowBackground="#FF3F3F46" AlternatingRowBackground="#FF2D2D30"
                  MouseDoubleClick="DataGrid_MouseDoubleClick">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="#FF434346"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="Padding" Value="5,0"/>
                    <Setter Property="BorderBrush" Value="#FF666666"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Codice" Binding="{Binding Codice}" Width="100"/>
                <DataGridTextColumn Header="Descrizione" Binding="{Binding Descrizione}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Pulsanti -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                    Background="#FF3F3F46" Height="Auto" Margin="0,5,0,0">
            <Button Name="OkButton" Content="OK" Width="80" Margin="10,10" 
                    Click="Ok_Click" Style="{StaticResource ActionButtonStyle}"
                    IsDefault="True"/>
            <Button Name="AnnullaButton" Content="Annulla" Width="80" Margin="0,10,10,10" 
                    Click="Annulla_Click" Style="{StaticResource ActionButtonStyle}"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>