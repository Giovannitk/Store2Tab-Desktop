<UserControl x:Class="Store2Tab.Views.GestioneProtocolliContatoriView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Store2Tab.Views">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Contenuto principale -->
        </Grid.RowDefinitions>

        <!-- Toolbar con pulsanti -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="35">
            <Button Name="NuovoButton" Content="F1-Nuovo" Width="80" Margin="5,3" 
                    Click="Nuovo_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="SalvaButton" Content="F2-Salva" Width="80" Margin="5,3" 
                    Click="Salva_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="CancellaButton" Content="F4-Cancella" Width="90" Margin="5,3" 
                    Click="Cancella_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="AnnullaButton" Content="F8-Annulla" Width="90" Margin="5,3" 
                    Click="Annulla_Click" Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>

        <!-- Contenuto principale -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid protocolli contatori (sinistra) -->
            <DataGrid Grid.Column="0" Name="ProtocolliContatoriDataGrid" 
                      AutoGenerateColumns="False" CanUserAddRows="False"
                      Background="#FF3F3F46" Foreground="White" 
                      GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                      BorderBrush="#FF434346" BorderThickness="1"
                      SelectionChanged="DataGrid_SelectionChanged"
                      RowBackground="#FF3F3F46" AlternatingRowBackground="#FF2D2D30">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF434346"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Padding" Value="5,0"/>
                        <Setter Property="BorderBrush" Value="#FF666666"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Anno" Binding="{Binding Anno}" Width="60"/>
                    <DataGridTextColumn Header="Protocollo (descrizione)" 
                                        Binding="{Binding ProtocolloDescrizione}" Width="200"/>
                    <DataGridTextColumn Header="Contatore" Binding="{Binding Contatore}" Width="80"/>
                </DataGrid.Columns>

                <DataGrid.Items>
                </DataGrid.Items>
            </DataGrid>

            <!-- Pannello dettagli (destra) -->
            <StackPanel Grid.Column="1" Margin="15,0,0,0">

                <!-- Anno -->
                <GroupBox Header="Anno" Style="{StaticResource ModernGroupBox}" 
                          Height="70" Margin="0,0,0,15">
                    <TextBox Name="AnnoTextBox" Height="25" Width="100" 
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

                <!-- Protocollo -->
                <GroupBox Header="Protocollo" Style="{StaticResource ModernGroupBox}" 
                          Height="70" Margin="0,0,0,15">
                    <TextBox Name="ProtocolloTextBox" Height="25" 
                             VerticalAlignment="Top" Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

                <!-- Contatore -->
                <GroupBox Header="Contatore" Style="{StaticResource ModernGroupBox}" 
                          Height="70" Margin="0,0,0,15">
                    <TextBox Name="ContatoreTextBox" Height="25" Width="100"
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>