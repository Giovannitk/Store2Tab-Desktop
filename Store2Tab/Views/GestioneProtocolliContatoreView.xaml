<UserControl x:Class="Store2Tab.Views.GestioneProtocolliContatoriView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Store2Tab.Converters">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="Auto">
            <Button Content="F2-Salva" Width="80" Margin="5,3" 
                    Click="Salva_Click" 
                    IsEnabled="{Binding IsInEditMode}"
                    Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="F4-Cancella" Width="90" Margin="5,3" 
                    Click="Cancella_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Content="F8-Annulla" Width="90" Margin="5,3" 
                    Click="Annulla_Click"
                    IsEnabled="{Binding IsInEditMode}"
                    Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>

        <!-- Contenuto principale -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="360"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- DataGrid -->
            <DataGrid Grid.Column="0" 
                      Name="ProtocolliContatoriDataGrid"
                      ItemsSource="{Binding ProtocolliContatori}"
                      SelectedItem="{Binding Selezionato, Mode=TwoWay}"
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False"
                      IsEnabled="{Binding IsInEditMode, Converter={StaticResource InverseBooleanConverter}}"
                      Background="#FF3F3F46" 
                      Foreground="White" 
                      GridLinesVisibility="Horizontal" 
                      HeadersVisibility="Column"
                      BorderBrush="#FF434346" 
                      BorderThickness="1"
                      RowBackground="#FF3F3F46" 
                      AlternatingRowBackground="#FF2D2D30">

                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#FF434346"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Padding" Value="5,0"/>
                        <Setter Property="BorderBrush" Value="#FF666666"/>
                        <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Anno" 
                                        Binding="{Binding Esercizio}" 
                                        Width="60"/>
                    <DataGridTextColumn Header="Protocollo" 
                                        Binding="{Binding NomeProtocollo}" 
                                        Width="200"/>
                    <DataGridTextColumn Header="Contatore" 
                                        Binding="{Binding Contatore}" 
                                        Width="80"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Pannello dettagli -->
            <Grid Grid.Column="1" Margin="15,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Anno -->
                <GroupBox Grid.Row="0" Header="Anno" 
                          Style="{StaticResource ModernGroupBox}" 
                          Height="70" Margin="0,0,0,15">
                    <TextBox Height="25" Width="100" 
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Top"
                             Text="{Binding Esercizio}"
                             IsReadOnly="True"
                             Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

                <!-- Protocollo -->
                <GroupBox Grid.Row="1" Header="Protocollo" 
                          Style="{StaticResource ModernGroupBox}" 
                          Height="70" Margin="0,0,0,15">
                    <TextBox Height="25" 
                             VerticalAlignment="Top"
                             Text="{Binding NomeProtocollo}"
                             IsReadOnly="True"
                             Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

                <!-- Contatore -->
                <GroupBox Grid.Row="2" Header="Contatore" 
                          Style="{StaticResource ModernGroupBox}" 
                          Height="70">
                    <TextBox Height="25" Width="100"
                             HorizontalAlignment="Left" 
                             VerticalAlignment="Top"
                             Text="{Binding Contatore, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="Contatore_TextChanged"
                             Style="{StaticResource ModernTextBox}"/>
                </GroupBox>
            </Grid>
        </Grid>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="2" 
              Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Caricamento..." 
                           Foreground="White" 
                           FontSize="16" 
                           FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>