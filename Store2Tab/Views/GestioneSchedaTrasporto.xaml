<UserControl x:Class="Store2Tab.Views.GestioneSchedaTrasportoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Store2Tab.Views">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="*"/>
            <!-- Contenuto principale -->
        </Grid.RowDefinitions>

        <!-- Toolbar con pulsanti -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="Auto">
            <Button Name="SalvaButton" Content="F2-Salva" Width="80" Margin="5,3" 
            Click="Salva_Click" 
            IsEnabled="{Binding CanSave}"
            Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="CancellaButton" Content="F4-Cancella" Width="90" Margin="5,3" 
            Click="Cancella_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="AnnullaButton" Content="F8-Annulla" Width="90" Margin="5,3" 
            Click="Annulla_Click" 
            IsEnabled="{Binding CanCancel}"
            Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>

        <!-- Contenuto principale -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Sezione A - Dati del Vettore -->
                <GroupBox Grid.Row="0" Header="A - Dati del Vettore (ragione sociale, indirizzo, telefono)" 
                          Style="{StaticResource ModernGroupBox}" Margin="0,0,0,10">
                    <Grid Height="120">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Prima riga -->
                        <TextBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Name="DatiVettoreTextBox" 
                                 Height="25" Margin="5" Style="{StaticResource ModernTextBox}"/>

                        <!-- Seconda riga -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Partita I.V.A." Foreground="White" 
                                   VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" Name="PartitaIvaVettoreTextBox" 
                                 Height="25" Width="150" HorizontalAlignment="Left" 
                                 Margin="5" Style="{StaticResource ModernTextBox}"/>

                        <!-- Terza riga -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Albo Autotrasp." Foreground="White" 
                                   VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox Grid.Row="2" Grid.Column="1" Name="AlboAutotrasportoTextBox" 
                                 Height="25" Width="150" HorizontalAlignment="Left" 
                                 Margin="5" Style="{StaticResource ModernTextBox}"/>
                    </Grid>
                </GroupBox>

                <!-- Sezione B - Dati del Committente -->
                <GroupBox Grid.Row="1" Header="B - Dati del Committente (ragione sociale, indirizzo, telefono)" 
                          Style="{StaticResource ModernGroupBox}" Margin="0,0,0,10">
                    <Grid Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Prima riga -->
                        <TextBox Grid.Row="0" Grid.Column="0" Name="DatiCommittenteTextBox" 
                                 Height="25" Margin="5" Style="{StaticResource ModernTextBox}"/>

                        <!-- Seconda riga -->
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Partita I.V.A." Foreground="White" 
                                   VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox Grid.Row="1" Grid.Column="2" Name="PartitaIvaCommittenteTextBox" 
                                 Height="25" Margin="5" Style="{StaticResource ModernTextBox}"/>
                    </Grid>
                </GroupBox>

                <!-- Sezione C - Dati del Caricatore -->
                <GroupBox Grid.Row="2" Header="C - Dati del Caricatore (ragione sociale, indirizzo, telefono)" 
                          Style="{StaticResource ModernGroupBox}" Margin="0,0,0,10">
                    <Grid Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>

                        <!-- Prima riga -->
                        <TextBox Grid.Row="0" Grid.Column="0" Name="DatiCaricatoreTextBox" 
                                 Height="25" Margin="5" Style="{StaticResource ModernTextBox}"/>

                        <!-- Seconda riga -->
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="Partita I.V.A." Foreground="White" 
                                   VerticalAlignment="Center" Margin="5,0,10,0"/>
                        <TextBox Grid.Row="1" Grid.Column="2" Name="PartitaIvaCaricatoreTextBox" 
                                 Height="25" Margin="5" Style="{StaticResource ModernTextBox}"/>
                    </Grid>
                </GroupBox>

                <!-- Sezioni D ed E affiancate -->
                <Grid Grid.Row="3" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Sezione D - Dati Proprietario Merce -->
                    <GroupBox Grid.Column="0" Header="D - Dati Proprietario Merce (ragione sociale, indirizzo, telefono)" 
                              Style="{StaticResource ModernGroupBox}">
                        <Grid Height="120">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Prima riga -->
                            <TextBox Grid.Row="0" Name="DatiProprietarioMerceTextBox" 
                                     Height="25" Margin="5" Style="{StaticResource ModernTextBox}"/>

                            <!-- Seconda riga -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Partita I.V.A." Foreground="White" 
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBox Name="PartitaIvaProprietarioTextBox" Height="25" Width="150" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Terza riga -->
                            <TextBox Grid.Row="2" Name="EventualiDichiarazioniTextBox" 
                                     Height="25" Margin="5" Style="{StaticResource ModernTextBox}"
                                     Text="Eventuali dichiarazioni (in assenza di proprietario)"/>
                        </Grid>
                    </GroupBox>

                    <!-- Sezione E - Dati Merce Trasportata -->
                    <GroupBox Grid.Column="2" Header="E - Dati Merce Trasportata" 
                              Style="{StaticResource ModernGroupBox}">
                        <Grid Height="Auto">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Tipologia -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Tipologia" Foreground="White" 
                                           VerticalAlignment="Center" Margin="0,0,20,0" Width="80"/>
                                <TextBox Name="TipologiaMerceTextBox" Height="25" Width="200" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Quantità/Peso -->
                            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Quantità/Peso" Foreground="White" 
                                           VerticalAlignment="Center" Margin="0,0,20,0" Width="80"/>
                                <TextBox Name="QuantitaPesoTextBox" Height="25" Width="200" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Luogo di Carico -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Luogo di Carico" Foreground="White" 
                                           VerticalAlignment="Center" Margin="0,0,20,0" Width="80"/>
                                <TextBox Name="LuogoCaricoTextBox" Height="25" Width="200" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>

                            <!-- Luogo di Scarico -->
                            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="5">
                                <TextBlock Text="Luogo di Scarico" Foreground="White" 
                                           VerticalAlignment="Center" Margin="0,0,20,0" Width="80"/>
                                <TextBox Name="LuogoScaricoTextBox" Height="25" Width="200" 
                                         Style="{StaticResource ModernTextBox}"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                </Grid>

                <!-- Sezione finale - Luogo di Compilazione e Compilatore -->
                <Grid Grid.Row="4" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Luogo di Compilazione -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBlock Text="Luogo di Compilazione" Foreground="White" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Name="LuogoCompilazioneTextBox" Height="25" Width="200" 
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>

                    <!-- Compilatore -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="Compilatore" Foreground="White" 
                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBox Name="CompilatoreTextBox" Height="25" Width="200" 
                                 Style="{StaticResource ModernTextBox}"/>
                    </StackPanel>
                </Grid>

                <!-- Spazio aggiuntivo per eventuali altri controlli -->
                <Grid Grid.Row="5">
                    <!-- Placeholder per eventuali controlli aggiuntivi -->
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>