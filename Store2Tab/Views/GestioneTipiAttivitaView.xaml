<UserControl x:Class="Store2Tab.Views.GestioneTipiAttivitaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Filtri ricerca -->
            <RowDefinition Height="*"/>
            <!-- Contenuto principale -->
        </Grid.RowDefinitions>

        <!-- Toolbar con pulsanti -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="Auto">
            <Button Name="NuovoButton" Content="F1-Nuovo" Width="80" Margin="5,3" 
                    Click="Nuovo_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="SalvaButton" Content="F2-Salva" Width="80" Margin="5,3" 
                    Click="Salva_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="CancellaButton" Content="F4-Cancella" Width="90" Margin="5,3" 
                    Click="Cancella_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="AnnullaButton" Content="F8-Annulla" Width="90" Margin="5,3" 
                    Click="Annulla_Click" Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>

        <!-- Sezione filtri ricerca -->
        <Grid Grid.Row="1" Background="#FF3F3F46" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="codice" Foreground="White" 
                       VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Grid.Column="1" Name="CodiceRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"/>

            <TextBlock Grid.Column="2" Text="descrizione" Foreground="White" 
                       VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBox Grid.Column="3" Name="DescrizioneRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"/>

            <Button Grid.Column="5" Name="CercaButton" Content="F3-Cerca" Width="80" 
                    Margin="10,6" Click="Cerca_Click" Style="{StaticResource ActionButtonStyle}"/>
        </Grid>

        <!-- Contenuto principale -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista tipi attività (sinistra) -->
            <GroupBox Grid.Column="0" Header="Attività (descrizione)" 
                      Style="{StaticResource ModernGroupBox}">
                <ListBox Name="TipiAttivitaListBox" Background="#FF3F3F46" 
                         Foreground="White" BorderBrush="#FF434346"
                         SelectionChanged="ListBox_SelectionChanged">
                    <!-- Dati di esempio - sostituire con binding -->
                    <ListBox.Items>
                        <ListBoxItem Content="Consulenza Aziendale" Tag="001"/>
                        <ListBoxItem Content="Sviluppo Software" Tag="002"/>
                        <ListBoxItem Content="Formazione" Tag="003"/>
                        <ListBoxItem Content="Manutenzione" Tag="004"/>
                        <ListBoxItem Content="Assistenza Tecnica" Tag="005"/>
                        <ListBoxItem Content="Progettazione" Tag="006"/>
                        <ListBoxItem Content="Installazione" Tag="007"/>
                        <ListBoxItem Content="Vendita" Tag="008"/>
                        <ListBoxItem Content="Servizi Generali" Tag="009"/>
                        <ListBoxItem Content="Amministrazione" Tag="010"/>
                    </ListBox.Items>
                </ListBox>
            </GroupBox>

            <!-- Pannello dettagli (destra) -->
            <StackPanel Grid.Column="1" Margin="15,0,0,0">

                <!-- Codice -->
                <GroupBox Header="Codice" Style="{StaticResource ModernGroupBox}" 
                          Height="70" Margin="0,0,0,20">
                    <TextBox Name="CodiceTextBox" Height="25" Width="100" 
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

                <!-- Attività (descrizione) -->
                <GroupBox Header="Attività (descrizione)" Style="{StaticResource ModernGroupBox}" 
                          Height="70">
                    <TextBox Name="AttivitaDescrizioneTextBox" Height="25" 
                             VerticalAlignment="Top" Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>