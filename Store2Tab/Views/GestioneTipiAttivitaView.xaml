<UserControl x:Class="Store2Tab.Views.GestioneTipiAttivitaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:Store2Tab.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converter definiti nel namespace Store2Tab.Converters -->
            <conv:IsNotNullValueConverter x:Key="IsNotNullConverter"/>
            <conv:InverseBooleanValueConverter x:Key="InverseBooleanConverter"/>
            <conv:BooleanToVisibilityValueConverter x:Key="BooleanToVisibilityConverter"/>
            <conv:SelectedRowIndicatorValueConverter x:Key="SelectedRowIndicatorConverter"/>
            <conv:IsGreaterThanZeroConverter x:Key="IsGreaterThanZeroConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Filtri ricerca -->
            <RowDefinition Height="*"/>
            <!-- Contenuto principale -->
        </Grid.RowDefinitions>

        <!-- Toolbar con pulsanti (come nel VB6: F1-F8) -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="Auto">
            <Button Name="NuovoButton" Content="F1-Nuovo" Width="80" Margin="5,3" 
                    Click="Nuovo_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="SalvaButton" Content="F2-Salva" Width="80" Margin="5,3" 
                    Click="Salva_Click" Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding IsInEditMode}"/>
            <Button Name="CercaButton" Content="F3-Cerca" Width="80" Margin="5,3" 
                    Click="Cerca_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="CancellaButton" Content="F4-Cancella" Width="90" Margin="5,3" 
        Click="Cancella_Click" Style="{StaticResource ActionButtonStyle}"
        IsEnabled="{Binding TipoAttivitaSelezionato, Converter={StaticResource IsNotNullConverter}}"/>
            <!-- Nuovo pulsante per cancellazione multipla -->
            <Button Name="CancellaMultiplaButton" Content="F5-Canc.Mult." Width="100" Margin="5,3" 
        Click="CancellaMultipla_Click" Style="{StaticResource ActionButtonStyle}"

        IsEnabled="{Binding ElementiSelezionati.Count, Converter={StaticResource IsGreaterThanZeroConverter}}"/>
            <Button Name="AnnullaButton" Content="F8-Annulla" Width="90" Margin="5,3" 
                    Click="Annulla_Click" Style="{StaticResource ActionButtonStyle}"
                    IsEnabled="{Binding IsInEditMode}"/>
        </StackPanel>

        <!-- Sezione filtri ricerca (come nel VB6: txtIdAnagraficaAttivita_Ric, txtAnagraficaAttivita_Ric) -->
        <Grid Grid.Row="1" Background="#FF3F3F46" Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="codice" Foreground="White" 
                       VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Grid.Column="1" Name="CodiceRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"
                     Text="{Binding FiltroCodice, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="CodiceRicercaTextBox_KeyDown"/>

            <TextBlock Grid.Column="2" Text="descrizione" Foreground="White" 
                       VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBox Grid.Column="3" Name="DescrizioneRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"
                     Text="{Binding FiltroAttivita, UpdateSourceTrigger=PropertyChanged}"
                     KeyDown="DescrizioneRicercaTextBox_KeyDown"/>
        </Grid>

        <!-- Contenuto principale (layout simile al VB6: flexG a sinistra, campi dettaglio a destra) -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Lista tipi attività (sinistra - simile al flexG del VB6) -->
            <GroupBox Grid.Column="0" Header="Tipi Attività" 
                      Style="{StaticResource ModernGroupBox}">

                <DataGrid Name="TipiAttivitaDataGrid" 
          ItemsSource="{Binding TipiAttivita}"
          SelectedItem="{Binding TipoAttivitaSelezionato}"
          SelectionMode="Extended"
          AutoGenerateColumns="False"
          CanUserAddRows="False"
          CanUserDeleteRows="False"
          CanUserReorderColumns="False"
          CanUserResizeRows="False"
          Background="#FF3F3F46" 
          Foreground="White" 
          BorderBrush="#FF434346"
          GridLinesVisibility="Horizontal"
          HorizontalGridLinesBrush="#FF5A5A5A"
          VerticalGridLinesBrush="#FF5A5A5A"
          RowBackground="#FF3F3F46"
          AlternatingRowBackground="#FF484850"
          HeadersVisibility="Column"
          IsEnabled="{Binding IsInEditMode, Converter={StaticResource InverseBooleanConverter}}"
          SelectionChanged="TipiAttivitaDataGrid_SelectionChanged">

                    <DataGrid.Columns>
                        <!-- Indicatore di riga selezionata (come il ">" nel VB6) -->
                        <DataGridTextColumn Header="" Width="30" IsReadOnly="True">
                            <DataGridTextColumn.Binding>
                                <MultiBinding Converter="{StaticResource SelectedRowIndicatorConverter}">
                                    <Binding Path="."/>
                                    <Binding Path="DataContext.TipoAttivitaSelezionato" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                                </MultiBinding>
                            </DataGridTextColumn.Binding>
                        </DataGridTextColumn>

                        <!-- ID (visibile ma stretto) -->
                        <DataGridTextColumn Header="ID" Binding="{Binding IdAnagraficaAttivita}" 
                          Width="60" IsReadOnly="True"/>

                        <!-- Attività -->
                        <DataGridTextColumn Header="Attività" 
                          Binding="{Binding Attivita}" 
                          Width="*" IsReadOnly="True"/>
                    </DataGrid.Columns>

                    <!-- Stile per le intestazioni delle colonne -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#FF2D2D30"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderBrush" Value="#FF5A5A5A"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- Stile per le celle -->
                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Padding" Value="5,2"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF007ACC"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="BorderBrush" Value="#FF007ACC"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="Background" Value="#FF1E1E1E"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <!-- Stile per le righe -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF5A5A5A"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#FF007ACC"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </GroupBox>

            <!-- Pannello dettagli (destra - simile ai campi txtIdAnagraficaAttivita, txtAnagraficaAttivita del VB6) -->
            <StackPanel Grid.Column="1" Margin="15,0,0,0">

                <!-- Codice (simile a txtIdAnagraficaAttivita nel VB6) -->
                <GroupBox Header="Codice" Style="{StaticResource ModernGroupBox}" 
                          Height="70" Margin="0,0,0,20">
                    <TextBox Name="CodiceTextBox" Height="25" Width="100" 
                             HorizontalAlignment="Left" VerticalAlignment="Top"
                             Style="{StaticResource ModernTextBox}"
                             Text="{Binding CodiceProposto}"
                             IsReadOnly="True"/>
                </GroupBox>

                <!-- Attività (denominazione) - simile a txtAnagraficaAttivita nel VB6 -->
                <GroupBox Header="Attività (denominazione)" Style="{StaticResource ModernGroupBox}" 
                          Height="70">
                    <TextBox Name="AttivitaDescrizioneTextBox" Height="25" 
                             VerticalAlignment="Top" Style="{StaticResource ModernTextBox}"
                             Text="{Binding TipoAttivitaSelezionato.Attivita, UpdateSourceTrigger=PropertyChanged}"
                             TextChanged="AttivitaDescrizioneTextBox_TextChanged"/>
                </GroupBox>

            </StackPanel>
        </Grid>

        <!-- Loading indicator -->
        <Grid Grid.RowSpan="3" Background="#80000000" 
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="10"/>
                <TextBlock Text="Caricamento..." Foreground="White" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>