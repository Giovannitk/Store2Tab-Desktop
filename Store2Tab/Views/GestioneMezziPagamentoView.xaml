<UserControl x:Class="Store2Tab.Views.GestioneMezziPagamentoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Themes/SharedStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FF2D2D30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Filtri ricerca -->
            <RowDefinition Height="Auto"/>
            <!-- Lista mezzi pagamento -->
            <RowDefinition Height="*"/>
            <!-- Dettagli -->
        </Grid.RowDefinitions>

        <!-- Toolbar con pulsanti -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF3F3F46" Height="45">
            <Button Name="NuovoButton" Content="F1-Nuovo" Width="80" Margin="5,3" 
                    Click="Nuovo_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="SalvaButton" Content="F2-Salva" Width="80" Margin="5,3" 
                    Click="Salva_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="CancellaButton" Content="F4-Cancella" Width="90" Margin="5,3" 
                    Click="Cancella_Click" Style="{StaticResource ActionButtonStyle}"/>
            <Button Name="AnnullaButton" Content="F8-Annulla" Width="90" Margin="5,3" 
                    Click="Annulla_Click" Style="{StaticResource ActionButtonStyle}"/>
        </StackPanel>

        <!-- Sezione filtri ricerca -->
        <Grid Grid.Row="1" Background="#FF3F3F46" Height="35">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="codice" Foreground="White" 
                       VerticalAlignment="Center" Margin="10,0,5,0"/>
            <TextBox Grid.Column="1" Name="CodiceRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"/>

            <TextBlock Grid.Column="2" Text="descrizione" Foreground="White" 
                       VerticalAlignment="Center" Margin="15,0,5,0"/>
            <TextBox Grid.Column="3" Name="DescrizioneRicercaTextBox" Height="23" 
                     Margin="0,6" Style="{StaticResource ModernTextBox}"/>

            <Button Grid.Column="5" Name="CercaButton" Content="F3-Cerca" Width="80" 
                    Margin="10,0" Click="Cerca_Click" Style="{StaticResource ModernButton}"/>
        </Grid>

        <!-- Lista mezzi di pagamento (sinistra) -->
        <Grid Grid.Row="2" Margin="10,10,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Grid.Column="0" Header="Mezzo di Pagamento (descrizione)" 
                      Style="{StaticResource ModernGroupBox}">
                <ListBox Name="MezziPagamentoListBox" Background="#FF3F3F46" 
                         Foreground="White" BorderBrush="#FF434346"
                         SelectionChanged="ListBox_SelectionChanged">
                    <ListBox.Items>
                        <!-- Dati di esempio - sostituire con binding -->
                        <ListBoxItem Content="Assegno"/>
                        <ListBoxItem Content="Bonifico Bancario"/>
                        <ListBoxItem Content="Contanti"/>
                        <ListBoxItem Content="Contrassegno"/>
                        <ListBoxItem Content="Finanziaria"/>
                        <ListBoxItem Content="R.I.D."/>
                        <ListBoxItem Content="Ricevuta Bancaria"/>
                    </ListBox.Items>
                </ListBox>
            </GroupBox>

            <!-- Pannello dettagli (destra) -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <!-- Codice -->
                <GroupBox Header="Codice" Style="{StaticResource ModernGroupBox}" 
                          Height="Auto" Margin="0,0,0,10">
                    <TextBox Name="CodiceTextBox" Height="23" Width="80" 
                             HorizontalAlignment="Left" Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

                <!-- Mezzo di Pagamento (descrizione) -->
                <GroupBox Header="Mezzo di Pagamento (descrizione)" 
                          Style="{StaticResource ModernGroupBox}" 
                          Height="Auto" Margin="0,0,0,10">
                    <TextBox Name="DescrizioneMezzoPagamentoTextBox" Height="23" 
                             Style="{StaticResource ModernTextBox}"/>
                </GroupBox>

                <!-- Tipo -->
                <GroupBox Header="Tipo" Style="{StaticResource ModernGroupBox}" 
                          Height="Auto" Margin="0,0,0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0" Name="TipoTextBox" Height="23" 
                                 Style="{StaticResource ModernTextBox}"/>
                        <CheckBox Grid.Column="1" Name="PagamentoInterbancarioCheckBox" 
                                  Content="Pagamento Interbancario" Foreground="White"
                                  VerticalAlignment="Center" Margin="10,0,0,0"/>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </Grid>

        <!-- Sezione inferiore -->
        <GroupBox Grid.Row="3" Header="Codice per la Fatturazione Elettronica" 
                  Style="{StaticResource ModernGroupBox}" Margin="10">
            <TextBox Name="CodiceFatturazioneElettronicaTextBox" Height="23" 
                     Width="120" HorizontalAlignment="Left"
                     Style="{StaticResource ModernTextBox}"/>
        </GroupBox>
    </Grid>
</UserControl>